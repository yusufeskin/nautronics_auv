<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="add_thruster" params="id x y z r p yaw prop_type coeff">
    <link name="thruster${id}">
      <visual>
        <origin xyz="0 0 0" rpy="-1.571 0 0"/> 
        <geometry>
          <mesh filename="package://auv_description/models/bluerov2_heavy/meshes/t200_${prop_type}_prop.dae"/>
        </geometry>  
      </visual>
      <inertial>
        <mass value="0.002"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>
    <joint name="thruster${id}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="thruster${id}"/>
      <origin xyz="${x} ${y} ${z}" rpy="${r} ${p} ${yaw}"/>
      <axis xyz="0 0 -1"/>
    </joint>

    <gazebo>
      <plugin filename="gz-sim-thruster-system" name="gz::sim::systems::Thruster">
        <namespace>prototype</namespace>
        <joint_name>thruster${id}_joint</joint_name>
        <thrust_coefficient>${coeff}</thrust_coefficient>
        <fluid_density>1000.0</fluid_density>
        <propeller_diameter>0.1</propeller_diameter>
        <velocity_control>true</velocity_control>
      </plugin>
    </gazebo>
  </xacro:macro>

</robot>